<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Downloadproject" x:Class="Downloadproject.Downloader" 
             mc:Ignorable="d" Height="300" Width="434">
    <Grid Background="Transparent">
        <TextBox x:Name="Inputtext" Margin="10,45,66,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="CreateDcontrolButton" Content="Download" Margin="0,45,10,0" VerticalAlignment="Top" Click="HandlerDownloadStart" HorizontalAlignment="Right" Width="51" Height="22" FontSize="10"/>
        <StackPanel x:Name="Downloadpanal" Margin="10,73,10,10" Width="auto"/>
        <Image Name="moveimage" Canvas.ZIndex="2" RenderTransformOrigin="0.487,0.04" Margin="0,5,0,0" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">
            <Image.Source>
                <BitmapImage UriSource="F:/logo.png"></BitmapImage>
            </Image.Source>
        </Image>
        <Border x:Name="moveborder" BorderBrush="Black" BorderThickness="1" Height="40" VerticalAlignment="Top" Background="Black"  Canvas.ZIndex="1"/>
    </Grid>
</UserControl>
